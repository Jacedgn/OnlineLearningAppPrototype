<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_Activity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_light_gradient"
        tools:ignore="ContentDescription" />
    

    <FrameLayout
        android:id="@+id/framelayout_lcologotop_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/lcologotop_main"/>

    </FrameLayout>



    <ImageView
        android:id="@+id/mainbgartone"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="-10dp"
        android:src="@drawable/dm"
        android:alpha=".9"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/mainbgarttwo"
        android:layout_below="@+id/lcodfftwo"
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-160dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/phonefinal"
        android:alpha=".7"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/lcodffone"
        android:layout_below="@+id/framelayout_lcologotop_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/lcodfone"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textviewcolorone"/>
    <TextView
        android:id="@+id/lcodfftwo"
        android:layout_below="@+id/lcodffone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:text="@string/lcodftwo"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@color/textviewcolorone"/>



    <FrameLayout
        android:id="@+id/framlayoutcntw"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="@color/transwhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <include
            android:layout_gravity="center"
            layout="@layout/continuewith_main"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

        </include>

    </FrameLayout>

    <ImageView
        android:id="@+id/aboutbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/themebtn"
        android:layout_toStartOf="@+id/aboutbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_brightness_medium_black_24dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        tools:ignore="ContentDescription" />





</RelativeLayout>