<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="@android:color/transparent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/header_shape"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/lco_logo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lcologo_dark"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/headertextviewone"
        android:layout_below="@+id/lco_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textviewone"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/textviewcolorone"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/headertextviewtwo"
        android:layout_below="@+id/headertextviewone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textviewtwo"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/textviewcolortwo"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/androidicn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/android"
        android:layout_marginStart="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:alpha="0.3"/>

    <ImageView
        android:id="@+id/swifticn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/swift"
        android:layout_marginEnd="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:alpha="0.3"/>

    <ImageView
        android:id="@+id/htmlicn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/html"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:alpha="0.3"/>

    <ImageView
        android:id="@+id/pythoneicn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/python"
        android:layout_marginEnd="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:alpha="0.3"/>

    <ImageView
        android:id="@+id/fluttericn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/flutter"
        android:layout_marginStart="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:alpha="0.3"/>

    <ImageView
        android:id="@+id/javaicn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/java"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:alpha="0.3"/>





</RelativeLayout>